<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Choose avatar!</h2>
    
    <%= render 'web/shared/error_messages', object: @user %>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @user, url: wizard_path, html: { multipart: true, role: "form" } do |f| %>

          <div class="form-group">
            <%= f.label :avatar, "Avatar (not required)" %>
            <%= f.file_field :avatar, class: "filestyle", data: { buttonBefore: true, buttonText: "Choose avatar"} %>
          </div>

          <div class="actions">
            <%= f.submit "Sign In", class: "btn btn-default btn-lg btn-block" %>
          </div>
        <% end %></br>

      </div>
    </div>
  </div>
</div>